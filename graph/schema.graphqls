type Category {
  id : ID!
  name : String!
  description : String
  courses : [Course!]!
}
type Course {
  id : ID!
  description : String
  category : Category!
}
input NewCategory {
  name : String!
  description : String
}
input NewCourse {
  name : String!
  description : String
  categoryId : ID!
}
type Query {
  categories : [Category!]!
  courses : [Course!]!
}
typee Mutation {
  createCategory(input : NewCategory!) : Category!
  createCourse(input : NewCourse!) : Course!
}